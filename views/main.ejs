  <!-- Form for creating a new job listing -->

  <button id="createJobBtn">Create Job Listing</button>

  <!-- Job listings -->
  <div class="job-listings">
    <h3>Job Search</h3>
    <ul>
      <% for(var i = 0; i <jobadd.length; i++) { %>
        <li class="job-item" data-id="<%= jobadd[i]._id %>">
          <!-- You can include an image here if you have in your jobadd objects -->
          <!-- <img src="<%= jobadd[i].imageUrl %>" alt="Company Logo"> -->
          <div class="job-details">
            <h2><%= jobadd[i].jobTitle %></h2>
            <div class="job-info">
              <span><i class="fa fa-map-marker" aria-hidden="true"></i> Location: <%= jobadd[i].location %></span>
              <span><i class="fa fa-briefcase" aria-hidden="true"></i> Job Type: <%= jobadd[i].jobType %></span>
              <span><i class="fa fa-calendar" aria-hidden="true"></i> Application Deadline: <%= jobadd[i].applicationDeadline %></span>
              <span><i class="fa fa-money" aria-hidden="true"></i> Salary Range: <%= jobadd[i].salaryRange %></span>
            </div>
            
          </div>
          <div class="job-actions">
            <button type="button" class="apply-button" data-creator-email="<%= jobadd[i].creatorEmail %>">Apply</button>

            <!-- <span><%= jobadd[i].thumbUp %></span> -->
            <span><i class="fa-solid fa-bookmark"aria-hidden="true"></i></span>
            <!-- <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
            <span><i class="fa fa-trash-alt" aria-hidden="true"></i></span>
          </div>
        </li>
      <% } %>
    </ul>
  </div>
<!-- The Modal -->
