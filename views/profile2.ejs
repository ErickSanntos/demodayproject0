    <!--  -->
 <!-- Form for creating a new job listing -->
    <form action="/joblistings" method="POST">
    <!-- Add input fields for job listing details (e.g., jobTitle, location, etc.) -->
    <input type="text" name="jobTitle" placeholder="Job Title" >
    <!-- Add other input fields for job listing details here -->
    <input type="text" name="location" placeholder="Location" >
    <input type="text" name="jobType" placeholder="Job Type" >
    <input type="text" name="salaryRange" placeholder="Salary Range" >
    <input type="text" name="companyLogo" placeholder="Company Logo" >
    <input type="text" name="applicationDeadline" placeholder="Application Deadline" >

    <!-- Submit button to create a new job listing -->
    <button type="submit">Create Job Listing</button>
</form>
<h3>job search</h3>
<ul class="job-listings">
  <% for(var i = 0; i <jobadd.length; i++) { %>
    <li class="job-item" data-id="<%= jobadd[i]._id %>">
      <!-- You can include an image here if you have in your jobadd objects -->
      <!-- <img src="<%= jobadd[i].imageUrl %>" alt="Company Logo"> -->
      <div class="job-details">
        <h2><%= jobadd[i].jobTitle %></h2>
        <div class="job-info">
          <span>Location: <%= jobadd[i].location %></span>
          <span>Job Type: <%= jobadd[i].jobType %></span>
          <span>Application Deadline: <%= jobadd[i].applicationDeadline %></span>
          <span>salaryRange: <%= jobadd[i].salaryRange %></span>
        </div>
      </div>
      <div class="job-actions">
        <span><%= jobadd[i].thumbUp %></span>
        <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
        <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
        <span><i class="fa fa-trash-alt" aria-hidden="true"></i></span>
      </div>
    </li>
  <% } %>
</ul>

